{
  "name": "kubidu",
  "version": "0.1.0",
  "private": true,
  "description": "GDPR & ISO 27001 compliant PaaS platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:detached": "docker-compose up -d",
    "down": "docker-compose down",
    "down:volumes": "docker-compose down -v",
    "build": "npm run build --workspace=@kubidu/shared && npm run build --workspace=@kubidu/api --workspace=@kubidu/web --workspace=@kubidu/webhook-service --workspace=@kubidu/build-service --workspace=@kubidu/deploy-controller",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "setup": "bash scripts/setup.sh",
    "db:migrate": "bash scripts/init-db.sh",
    "generate:keys": "bash scripts/generate-keys.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@types/canvas-confetti": "^1.9.0",
    "canvas-confetti": "^1.9.4",
    "socket.io-client": "^4.8.3",
    "sonner": "^2.0.7"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-musl": "^4.9.0"
  }
}
